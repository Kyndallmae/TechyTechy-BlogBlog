<script async type="application/javascript" src="/js/post.js"></script>

<header>
   <nav class="nb-row block">
      <ul class="c-row flex">
         <a href="/">
            <p class="link">HomePage</p>
         </a><span> | </span>
         <a href="/dashboard">
            <p class="link">Dashboard</p>
         </a><span> | </span>
         {{#if user}}
         <a href="/logout">
            <p class="link">Logout</p>
         </a><span> | </span>
         {{else}}
         <a href="/login">
            <p class="link">Login</p>
         </a><span> | </span>
         {{/if}}
         <a href="/register">
            <p class="link">Register</p>
         </a>
      </ul>
   </nav>
   <h2 style="text-align: center">Edit Post</h2>
</header>
<section>
   <form class="f-row block edit-form">
      <div class="inv-fieldset">
         <label id="title-label" for="post-title">Title:</label>
         <span class="in-row"><input id="post-title" /></span>
      </div>
      <div class="inv-fieldset">
         <label id="body-label" for="post-text">Body:</label>
         <span class="in-row"><input id="post-text" /></span>
      </div>
      <button class="btn-row edit-form" type="submit">Submit</button>
      <br />
   </form>
</section>