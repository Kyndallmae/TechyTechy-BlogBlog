<script async src="/js/comment.js"></script>

<header>
   <nav class="nb-row block">
      <ul class="c-row flex">
         <a href="/">
            <p class="link">HomePage</p>
         </a><span> | </span>
         <a href="/dashboard">
            <p class="link">Dashboard</p>
         </a><span> | </span>
         {{#if user}}
         <a href="/logout">
            <p class="link">Logout</p>
         </a><span> | </span>
         {{else}}
         <a href="/login">
            <p class="link">Login</p>
         </a><span> | </span>
         {{/if}}
         <a href="/register">
            <p class="link">Register</p>
         </a>
      </ul>
   </nav>
   <h2 style="text-align: center">Add Comment #x1F4AC</h2>
</header>
<section>
   <article class="i-row">
      <p class="t-row inline-block">{{post.date}}</p>
      <p class="t-row inline-block">{{post.title}}</p>
      <p class="t-row inline-block">{{post.body}}</p>
      <p class="t-row inline-block">Posted by {{post.user.name}}</p>
   </article>
</section>
<br />
{{#each post.comments}}
{{#if (equal post.id chosenPostId)}}
<section>
   <article class="i-row">
      <!-- todo: fix this code -->
      <p class="t-row inline-block">{{this.body}}</p>
      <p class="t-row inline-block">Posted by {{this.user.name}}</p>
   </article>
</section>
<br />
{{/if}}
{{/each}}
<section>
   <form class="f-row block comment-form">
      <div class="inv-fieldset">
         <label id="text-label" for="comment-text">New body:</label>
         <span class="in-row"><input id="comment-text" /></span>
      </div>
      <button class="btn-row" type="submit">Add</button>
      <br />
   </form>
</section>